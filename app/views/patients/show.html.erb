<h1><%= @patient.name %></h1>

<ul>
	<% @patient.appointments.each do |appointment| %>
		<li>
			<%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %> / 
			<%= link_to appointment.appointment_datetime.strftime("%B %e, %Y at %H:%M %p"), appointment_path(appointment) %>
				
			</li>
	<% end %>
</ul>
